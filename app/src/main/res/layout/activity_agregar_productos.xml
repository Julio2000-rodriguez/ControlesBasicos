<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregarProductos"
    android:padding="10dp"
    android:background="@drawable/fd">

    <EditText
        android:id="@+id/txtCodigoProd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:hint="Codigo" />

    <EditText
        android:id="@+id/txtDescripcionProd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:hint="Descripcion" />

    <EditText
        android:id="@+id/txtMedidaProd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="270dp"
        android:hint="Medida" />

    <EditText
        android:id="@+id/txtPrecioProd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnGuardarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="Guardar Producto" />

    <Button
        android:id="@+id/btnMostrarProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:text="Mostar Productos" />

    <ImageView
        android:id="@+id/imgPhotoProducto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/port" />


</RelativeLayout>